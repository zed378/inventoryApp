{{>main/home}}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-3">
                                <div class="text-center">
                                    <img src="/static/img/favicon.svg" alt="Logo"
                                        style="max-width: 100px; margin: 0 0 20px 0">
                                    <h3>Edit Rent</h3>
                                </div>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">Add Name</span>
                                                        </div>
                                                        <input type="text" class="form-control" name="prodname"
                                                            id="prodname" maxlength="255" placeholder="Input name"
                                                            required aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">Order Date</span>
                                                        </div>
                                                        <input type="date" class="form-control" name="ordate"
                                                            id="ordate" required
                                                            aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">Created</span>
                                                        </div>
                                                        <input type="date" class="form-control" name="rentdate"
                                                            id="rentdate" required
                                                            aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">Updated</span>
                                                        </div>
                                                        <input type="date" class="form-control" name="purupdate"
                                                            id="rentupdate" required
                                                            aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <label class="input-group-text" for="titlename">Title
                                                                Name</label>
                                                        </div>
                                                        <select class="custom-select" name="titlename" id="titlename">
                                                            <option selected>Choose...</option>
                                                            <option value="1">Mr. </option>
                                                            <option value="2">Mrs. </option>
                                                        </select>
                                                    </div>
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">First Name</span>
                                                        </div>
                                                        <input type="text" class="form-control" name="firstname"
                                                            id="firstname" maxlength="255" placeholder="Input name"
                                                            required aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">Middle Name</span>
                                                        </div>
                                                        <input type="text" class="form-control" name="middlename"
                                                            id="middlename" maxlength="255" placeholder="Input name"
                                                            required aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                    <div class="input-group input-group-sm mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"
                                                                id="inputGroup-sizing-sm">Last Name</span>
                                                        </div>
                                                        <input type="text" class="form-control" name="lastname"
                                                            id="lastname" maxlength="255" placeholder="Input name"
                                                            required aria-describedby="inputGroup-sizing-sm">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="pt-2 text-center">
                                    <a href=""><button class="btn btn-outline-success"
                                            style="width: 30%;">Save</button></a>
                                    <a href="/rent"><button class="btn btn-outline-dark"
                                            style="width: 30%;">Cancel</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>